{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "release",
            "type": "shell",
            "command": "g++",
            "args": [
                "./src/*.cpp",
                "-std=c++23",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-o",
                "./bin/release.out"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "./src/*.cpp",
                "-std=c++23",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-g",
                "-o",
                "./bin/debug.out"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}